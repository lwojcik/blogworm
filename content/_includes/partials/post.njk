<article class="article">
<h2 class="post-title"><a href="{{ link | addRef }}">{{ title }}</a></h2>

<div class="post-meta">
  <a href="{{ authorUrl | addRef }}" class="author">
    <img width="18" height="18" src="{{ avatar }}" alt="{{ authorName }}'s avatar" />
    <span>{{ authorName }}</span>
  </a>
  <time>
    {% include "svg/calendar.svg" %}
    <span>{{ published }}</span>
  </time>
</div>
<p>
{% if item.htmlDescription %}
  {{ item.htmlDescription|safe }}
{% elif item.description %}
  {{ item.description|safe }}
{% endif %}
</p>
</article>