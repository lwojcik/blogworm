{% if totalPages > 1 %}
  <nav class="pagination">
    <ul>
      <li class="links previous">
        {% if previousHref %}
          <a href="{{ previousHref }}">
            <span class="arrow">&larr; </span>Newer posts
          </a>
        {% else %}
          <span class="inactive-link">
            <span class="arrow">&larr;</span>Newer posts
          </span>
        {% endif %}
      </li>
      {% if currentPage %}
      <li class="current">
        Page {{ currentPage }} of {{ totalPages }}</span>
      </li>
      {% endif %}
      <li class="links next">
      {% if nextHref %}
        <a href="{{ nextHref }}">
          Older posts <span class="arrow">&rarr;</span>
        </a>
      {% else %}
        <span class="inactive-link">
          Older posts <span class="arrow">&rarr;</span>
        </span>
      {% endif %}
    </li>
  </ul>
</nav>
{% endif %}